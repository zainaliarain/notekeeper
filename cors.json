{
    "hosting": {
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    "storage": {
      "rules": "storage.rules",
      "cors": [
        {
          "origin": ["http://localhost:5173"],
          "method": ["GET", "POST", "PUT", "DELETE"],
          "maxAgeSeconds": 3600,
          "responseHeader": ["Content-Type", "Authorization"]
        }
      ]
    }
  }
  